set notification-error-fg       "#f7768e" # bright:red
set notification-warning-bg     "#1a1b26" # bg
set notification-warning-fg     "#e0af68" # bright:yellow
set notification-bg             "#1a1b26" # bg
set notification-fg             "#a9b1d6" # bright:green

set completion-bg               "#2c3043" # bg2
set completion-fg               "#c0caf5" # fg
set completion-group-bg         "#282c3f" # bg1
set completion-group-fg         "#6b7089" # gray
set completion-highlight-bg     "#7aa2f7" # bright:blue
set completion-highlight-fg     "#c0caf5" # fg

# Define the color in index mode
set index-bg                    "#2c3043" # bg2
set index-fg                    "#c0caf5" # fg
set index-active-bg             "#7aa2f7" # bright:blue
set index-active-fg             "#c0caf5" # fg

set inputbar-bg                 "#1a1b26" # bg
set inputbar-fg                 "#c0caf5" # fg

set statusbar-bg                "#2c3043" # bg2
set statusbar-fg                "#c0caf5" # fg

set highlight-color             "#e0af68" # bright:yellow
set highlight-active-color      "#ff9e64" # bright:orange

set default-bg                  "#1a1b26" # bg
set default-fg                  "#c0caf5" # fg
set render-loading              true
set render-loading-bg           "#1a1b26" # bg
set render-loading-fg           "#c0caf5" # fg

# Recolor book content's color
set recolor-lightcolor          "#1a1b26" # bg
set recolor-darkcolor           "#c0caf5" # fg
set recolor                     "false"
# set recolor-keephue           true      # keep original color```
